{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { auth } from '../firebase';\nimport { sendPasswordResetEmail } from 'firebase/auth';\nexport default {\n  data() {\n    return {\n      email: '',\n      loading: false\n    };\n  },\n  methods: {\n    async sendResetEmail() {\n      if (!this.email) {\n        alert(\"Please enter your email address.\");\n        return;\n      }\n      this.loading = true;\n      try {\n        await sendPasswordResetEmail(auth, this.email);\n        alert(\"Check your email! A password reset link has been sent.\");\n        this.$router.push('/');\n      } catch (error) {\n        console.error(error);\n        alert(\"Error: \" + error.message);\n      } finally {\n        this.loading = false;\n      }\n    }\n  }\n};","map":{"version":3,"names":["auth","sendPasswordResetEmail","data","email","loading","methods","sendResetEmail","alert","$router","push","error","console","message"],"sources":["D:\\login-feed\\src\\components\\ForgotPassword.vue"],"sourcesContent":["<template>\n  <div class=\"min-h-screen bg-gray-100 flex items-center justify-center px-4\">\n    <div class=\"bg-white p-8 rounded-xl shadow-md w-full max-w-md\">\n      <h2 class=\"text-2xl font-bold mb-6 text-gray-800 text-center\">Reset Password</h2>\n      \n      <p class=\"text-sm text-gray-600 mb-6\">\n        Enter your email address and we'll send you a link to reset your password. \n        If you signed up with Google, this will allow you to create a manual password.\n      </p>\n\n      <input\n        type=\"email\"\n        placeholder=\"Enter your email\"\n        class=\"w-full mb-4 px-4 py-2 border-2 rounded outline-none focus:ring-2 focus:ring-blue-500\"\n        v-model=\"email\"\n      />\n\n      <button\n        @click=\"sendResetEmail\"\n        :disabled=\"loading\"\n        class=\"w-full bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition\"\n      >\n        {{ loading ? 'Sending...' : 'Send